<Window x:Class="Movie_Rating_System.AddMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Movie" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Enter Movie Name:" Margin="10,0,10,22" Grid.RowSpan="2"/>
        <TextBox x:Name="txtMovieName" Margin="10,21,10,27" Grid.RowSpan="3"/>
        <Label Content="Select Rating:" Grid.Row="2" Margin="10,1,10,29" Grid.RowSpan="2"/>
        <ComboBox x:Name="cmbRating" Grid.Row="2" Margin="10,25,10,30" Grid.RowSpan="2">
            <ComboBoxItem Content="1 Star"/>
            <ComboBoxItem Content="1.5 Stars"/>
            <ComboBoxItem Content="2 Stars"/>
            <ComboBoxItem Content="2.5 Stars"/>
            <ComboBoxItem Content="3 Stars"/>
            <ComboBoxItem Content="3.5 Stars"/>
            <ComboBoxItem Content="4 Stars"/>
            <ComboBoxItem Content="4.5 Stars"/>
            <ComboBoxItem Content="5 Stars"/>
        </ComboBox>
        <Button Content="Add" Grid.Row="3" HorizontalAlignment="Center" Margin="0,52,0,-31" Width="52"/>
    </Grid>
</Window>
