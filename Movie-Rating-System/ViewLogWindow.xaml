<Window x:Class="Movie_Rating_System.ViewLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding MovieTitle}" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="20" Margin="0 0 0 10"/>
            <TextBlock Text="{Binding Rating}" Margin="0 0 0 5"/>
            <TextBlock Text="{Binding DateWatched}" Margin="0 0 0 5"/>
            <TextBlock Text="{Binding WrittenReview}" TextWrapping="Wrap" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
